<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:name=".HabitApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Habbit">

        <!-- LauncherActivity artık giriş noktası -->
        <activity
            android:name=".ui.habbit.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.Habbit.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding ekranı -->
        <activity
            android:name=".ui.habbit.OnboardingActivity"
            android:exported="false" />

        <!-- Ana ekran -->
        <activity
            android:name=".ui.habbit.MainActivity"
            android:exported="false" />

        <receiver
            android:name=".notification.NotificationReceiver"
            android:exported="true" />

    </application>

</manifest>
